{
  "name": "polyquery",
  "author": "lgy <2985302084@qq.com>",
  "private": true,
  "version": "1.0.0",
  "productName": "PolyQuery",
  "description": "A multi-source intelligent search tool that simultaneously sends your query to multiple websites and instantly delivers high-quality information.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "postinstall": "electron-builder install-app-deps",
    "build:electron": "npm run typecheck && vite build",
    "build": "npm run build:electron && electron-builder",
    "build:unpack": "npm run build:electron && electron-builder --dir",
    "build:win": "npm run build:electron && electron-builder --win",
    "build:mac": "npm run build:electron && electron-builder --mac",
    "build:linux": "npm run build:electron && electron-builder --linux"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "ant-design-vue": "^4.2.6",
    "electron-squirrel-startup": "^1.0.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "dotenv": "^17.2.3",
    "electron": "^30.0.1",
    "electron-builder": "^26.0.12",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "openai": "^6.9.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "main": "dist-electron/main.js"
}
